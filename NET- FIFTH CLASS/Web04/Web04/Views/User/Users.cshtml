@model IEnumerable<Web04.Models.User>
@{
    ViewBag.Title = "Users";
}

<h2>LISTADO DE USUARIOS</h2>

<table border="1">
    <tr>
        <th>ID</th>
        <th>USUARIO</th>
        <th>PASSWORD</th>
    </tr>
    <tbody>
        @if (Model != null)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.id</td>
                    <td>@user.user</td>
                    <td>@user.password</td>
                </tr>
            }
        }
    </tbody>
</table>
<a href="/User/Agregar">Agregar Usuario</a>

